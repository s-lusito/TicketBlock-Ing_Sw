# Stage build
FROM node:20 AS build
WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .
RUN npm run build

# Stage serve
FROM nginx:alpine
# --- AGGIUNGI QUESTA RIGA ---
COPY nginx.conf /etc/nginx/conf.d/default.conf
# ----------------------------
COPY --from=build /app/dist /usr/share/nginx/html
EXPOSE 80